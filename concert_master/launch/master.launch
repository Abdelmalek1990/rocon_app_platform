<launch>
  <arg name="concert_name" default="Concert"/>
  <node pkg="rocon_hub" type="hub.py" name="hub">
    <rosparam command="load" file="$(find rocon_hub)/param/default.yaml" />
    <param name="name" value="$(arg concert_name)"/>
  </node>
  <node ns="zeroconf" pkg="zeroconf_avahi" type="zeroconf" name="zeroconf"/>
  <node pkg="rocon_gateway" type="gateway.py" name="gateway">
    <rosparam command="load" file="$(find concert_master)/param/master_gateway.yaml"/>
    <rosparam command="load" file="$(find rocon_gateway)/param/default_blacklist.yaml"/>
  </node>
  <node pkg="concert_master" type="concert_master.py" name="concert_master" output="screen">
    <rosparam command="load" file="$(find concert_master)/param/master_gateway.yaml"/>
    <rosparam command="load" file="$(find concert_master)/param/config.yaml"/>
    <rosparam command="load" file="$(find rocon_gateway)/param/default_blacklist.yaml"/>
  </node>
  <node pkg="concert_conductor" type="conductor.py" name="concertconductor" output="screen"/>
  
</launch>
